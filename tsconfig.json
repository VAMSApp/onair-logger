{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ESNext"
    ],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
        "@lib": ["lib/*"],
        "@prisma": ["prisma/*"]
    },
    "outDir": "dist",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "declaration": true,
  },
  "include": [
    "."
  ]
}
